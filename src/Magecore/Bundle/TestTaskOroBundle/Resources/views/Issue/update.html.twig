{# src/InventoryBundle/Resources/views/Vehicle/update.html.twig #}
{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value.id %}
    {% set formAction = path('magecore_testtaskoro.issue_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('magecore_testtaskoro.issue_create') %}
{% endif %}

{% block navButtons %}
    {{ UI.cancelButton(path('magecore_testtaskoro_issue')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('magecore_testtastoro.issue_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

        {% block pageHeader %}
        {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('magecore_testtaskoro_issue'),
        'indexLabel': 'Issues'|trans,
        'entityTitle': form.vars.value.summary
    } %}
        {{ parent() }}
    {% else %}
    {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'Issues'|trans}) %}
    {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
    {% endblock pageHeader %}

    {% block content_data %}
    {% set id = 'issue-edit' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
            form_row(form.summary),
            form.type is defined ? form_row(form.type) : '' ,
            form_row(form.description),
            form_row(form.assignedTo),
            form_row(form.priority),

            ]
        }]
    }]
    %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
    {% endblock content_data %}